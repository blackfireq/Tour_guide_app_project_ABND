<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:minHeight="@dimen/list_site_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/siteImage"
        android:layout_width="@dimen/list_site_height"
        android:layout_height="@dimen/list_site_height"
        android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/site_name_view"
                style="@style/TextViewDesign"
                android:gravity="bottom"
                android:textStyle="bold"
                tools:text="lutti" />

            <TextView
                android:id="@+id/site_address_view"
                style="@style/TextViewDesign"
                tools:text="one" />
        </LinearLayout>


</LinearLayout>